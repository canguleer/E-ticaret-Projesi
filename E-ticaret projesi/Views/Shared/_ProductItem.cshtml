@model E_ticaret_projesi.DB.Products
@{
    ViewBag.Title = "_ProductItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{

    if (string.IsNullOrEmpty(Model.ProductImageName))
    {
        Model.ProductImageName = "http://placehold.it/300x150";
    }
}

<div class="col-md-3 col-sm-4 col-xs-12">
    <div class="thumbnail">
        <img src="@Model.ProductImageName">
        <div class="caption">
            <h3>@Model.Name</h3>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            <p>
                <a href="cart.html" class="btn btn-success">
                    <span class="glyphicon glyphicon-shopping-cart"></span>&nbsp;Sepete Ekle
                </a>
                <a href="#" data-toggle="modal" data-target="#productinfo" class="btn btn-info">
                    <span class="glyphicon glyphicon-info-sign"></span>&nbsp;Bilgi
                </a>
            </p>
        </div>
    </div>
</div>

